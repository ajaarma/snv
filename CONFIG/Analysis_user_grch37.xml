<?xml version="1.0" ?>
<config>
	<general>
		<genomeBuild>grch37</genomeBuild>
		<resourceDir>/rds/project/flr24/rds-flr24-wgs10k-ngc/WGS10K/data/NGC/us/misc/TEST_SNV/XTR/resources</resourceDir>
		<refFasta>genomes/grch37/Homo_sapiens.GRCh37.74.dna.fasta</refFasta>
	</general>
	<slurm>
		<dash>-</dash>
		<params1>
			<J>GT_ANNOT_FILT_BY_CHR</J>
			<A>WGS10K-SL2-CPU</A>
			<p>skylake-himem</p>
		</params1>
		<doubDash>--</doubDash>
		<params2>
			<nodes>=1</nodes>
			<ntasks>=1</ntasks>
			<time>=36:00:00</time>
			<mail-type>=FAIL,END</mail-type>
			<mail-user>%email%</mail-user>
			<output>%outFile%</output>
			<error>%errorFile%</error>
			<exclusive/>
		</params2>
	</slurm>
	<module>
		<value>
			<item>purge</item>
			<item>load samtools/1.3</item>
			<item>load vcftools/0.1.14</item>
			<item>load UCSCtools/20140819</item>
			<item>load R/3.3.2</item>
			<item>load gcc/5</item>
			<item>load parallel</item>
		</value>
	</module>
	<gvcfGenotyper>
		<binary>gvcfgenotyper</binary>
		<dash>-</dash>
		<params>
			<C/>
			<M/>
			<l>%infile%</l>
			<O>b</O>
			<o>%outFile%</o>
			<f>%ref_seq%</f>
			<r>%chr_num%</r>
			<L>%logFile%</L>
		</params>
	</gvcfGenotyper>
	<regions>
		<exons>regions/grch37/hg19_refseq_ensembl_exons_50bp_allMT_hgmd_clinvar_20200519.txt</exons>
		<PAR>regions/grch37/hg19_non_pseudoautosomal_regions_X.txt</PAR>
	</regions>
	<annotation>
		<vep-bin>vep</vep-bin>
		<outFormat>vcf</outFormat>
		<doubDash>--</doubDash>
		<defPar>
			<format>vcf</format>
			<offline/>
			<cache/>
			<dir_cache>softwares/vep/</dir_cache>
			<force_overwrite/>
			<species>homo_sapiens</species>
			<assembly>GRCh37</assembly>
			<port>3337</port>
			<vcf_info_field>ANN</vcf_info_field>
		</defPar>
		<all>
			<sift>b</sift>
			<polyphen>b</polyphen>
			<humdiv/>
			<regulatory/>
			<allele_number/>
			<total_length/>
			<numbers/>
			<domains/>
			<hgvs/>
			<protein/>
			<symbol/>
			<ccds/>
			<uniprot/>
			<canonical/>
			<biotype/>
			<check_existing/>
			<af/>
			<af_1kg/>
			<pubmed/>
			<gene_phenotype/>
			<variant_class/>
		</all>
		<plugIn>
			<CADD>
				<cadd_snv>cadd/grch37/whole_genome_SNVs.tsv.gz</cadd_snv>
				<cadd_indel>cadd/grch37/InDels.tsv.gz</cadd_indel>
			</CADD>
			<ExACpLI>gnomad/grch37/gnomad.v2.1.1.lof_metrics.by_transcript_forVEP.txt</ExACpLI>
			<REVEL>revel/grch37/new_tabbed_revel.tsv.gz</REVEL>
			<SpliceRegion>.</SpliceRegion>
		</plugIn>
		<cust-annot>
			<GNOMADg>
				<vcf>gnomad/grch37/gnomad.genomes.r2.1.1.sites.vcf.bgz</vcf>
				<fields>AC,AF,nhomalt,AC_male,AC_female,AF_male,AF_female,AF_afr,AF_amr,AF_asj,AF_eas,AF_fin,AF_nfe,AF_oth,AC_afr,AC_amr,AC_asj,AC_eas,AC_fin,AC_nfe,AC_oth,nhomalt_afr,nhomalt_amr,nhomalt_asj,nhomalt_eas,nhomalt_fin,nhomalt_nfe,nhomalt_oth,popmax,AC_popmax,AN_popmax,AF_popmax</fields>
				<tag>GNOMADg</tag>
			</GNOMADg>
			<GNOMADe>
				<vcf>gnomad/grch37/gnomad.exomes.r2.1.1.sites.vcf.bgz</vcf>
				<fields>AC,AF,nhomalt,AC_male,AC_female,AF_male,AF_female,AF_afr,AF_amr,AF_asj,AF_eas,AF_fin,AF_nfe,AF_oth,AF_sas,AC_afr,AC_amr,AC_asj,AC_eas,AC_fin,AC_nfe,AC_oth,AC_sas,nhomalt_afr,nhomalt_amr,nhomalt_asj,nhomalt_eas,nhomalt_fin,nhomalt_nfe,nhomalt_oth,nhomalt_sas,popmax,AC_popmax,AN_popmax,AF_popmax</fields>
				<tag>GNOMADe</tag>
			</GNOMADe>
			<EXAC>
				<vcf>exac/ExAC.r0.3.1.sites.vep.decompose.norm.prefixed_PASS-only.vcf.gz</vcf>
				<fields>EXAC_AC,EXAC_AC_AFR,EXAC_AC_AMR,EXAC_AC_EAS,EXAC_AC_FIN,EXAC_AC_NFE,EXAC_AC_OTH,EXAC_AC_SAS,EXAC_AC_Hemi,EXAC_AC_Hom,EXAC_Hom_AFR,EXAC_AF,EXAC_AC_MALE,EXAC_AC_FEMALE,EXAC_AC_POPMAX,EXAC_AN_POPMAX</fields>
			</EXAC>
			<EXACt>
				<vcf>exac/ExAC.r0.3.1.sites.vep.decompose.norm.prefixed_PASS-only.vcf.gz</vcf>
				<fields>Hom_AMR,Hom_EAS,Hom_FIN,Hom_NFE,Hom_OTH,Hom_SAS,POPMAX</fields>
				<tag>EXAC</tag>
			</EXACt>
			<HGMD>
				<vcf>hgmd/grch37/hgmd_pro_2019.4_hg19_wID.vcf.gz</vcf>
				<fields>ID,CLASS,MUT,DB,DNA,GENE,PROT,PHEN</fields>
				<tag>HGMD</tag>
			</HGMD>
			<CLINVAR>
				<vcf>clinvar/grch37/clinvar_20200506.vcf.gz</vcf>
				<fields>INFO</fields>
			</CLINVAR>
		</cust-annot>
	</annotation>
	<freqImpact>
		<vcf2tab>vcf2tab.v2.py</vcf2tab>
		<bcfBinary>bcftools</bcfBinary>
		<dash>-</dash>
		<keep>regions/grch37/no_freq_filters_grch37.v1.txt</keep>
		<exclude>
			<GNOMADg_AF>&gt;0.01</GNOMADg_AF>
			<GNOMADe_AF>&gt;0.01</GNOMADe_AF>
			<EXAC_AF>&gt;0.01</EXAC_AF>
		</exclude>
		<extReg>
			<value>
				<item>^#</item>
				<item>^MT</item>
				<item>MODERATE</item>
				<item>HIGH</item>
				<item>splice_donor_5th_base_variant</item>
				<item>splice_donor_0th_base_variant</item>
				<item>splice_donor_region_variant</item>
				<item>splice_polypyrimidine_tract_variant</item>
				<item>HGMD</item>
				<item>CLNSIG</item>
			</value>
		</extReg>
		<outFile>%outFile%</outFile>
	</freqImpact>
	<varPrior>
		<vpBin>variantPrioritization.v3.R</vpBin>
		<dash>-</dash>
		<params>
			<v>%inFile%</v>
			<o>%outFile%</o>
			<c>15</c>
			<l>ensembl/grch37/ensBioMart_grch37_v98_ENST_lengths_191208.txt</l>
		</params>
	</varPrior>
	<combChromTab>
		<combBin>combinePriorTab.R</combBin>
		<bcfSuffix>AC0.exon.vep.anno.sites.ploidy.ngcfreq</bcfSuffix>
		<tabSuffix>AC0.exon.vep.anno.sites.ploidy.ngcfreq.0_01.imp.prior</tabSuffix>
	</combChromTab>
	<famFilter>
		<famBin>familyFiltering.v7.R</famBin>
		<freqScript>_grch37</freqScript>
		<liftoverBin>addLiftoverCoords.sh</liftoverBin>
		<ped>%manifest%</ped>
		<columns>columns.extr_grch37.txt</columns>
		<family>%family_list%</family>
		<genelist>curated/NGC_genelist_allNamesOnly-20200519.txt</genelist>
		<haemGenesFile>curated/haem_somatic_mosaicism_genes_20191015.txt</haemGenesFile>
		<imprintedGenesFile>curated/imprinted_genes_20200424.txt</imprintedGenesFile>
		<polymorphicGenesFile>curated/polymorphic_genes_20200509.txt</polymorphicGenesFile>
		<phenotypes>.</phenotypes>
		<hpo>hpo/phenotype_to_genes.txt</hpo>
		<omim>omim/omim_20200421_geneInfoBase.txt</omim>
		<crossmap>CrossMap.py</crossmap>
		<chain>genomes/GRCh37_to_GRCh38.chain.gz</chain>
		<newCol>grch38_coords</newCol>
	</famFilter>
</config>

